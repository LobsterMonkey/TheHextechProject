pragma solidity 0.8.0;
contract WhitelistedHexTechPresale is AccessControlEnumerable, HexTechPresale {

    bytes32 public constant WHITELIST_ROLE = keccak256("WHITELIST_ROLE");

    constructor(uint256 _rate, address _wallet, IHexTechToken _token, address _wethAddress) HexTechPresale(_rate, _wallet, _token, _wethAddress) {
        // Grant the minter role to a specified account
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

     function _preValidatePurchase(address _beneficiary, uint256 _weiAmount) internal virtual override view {

        require(hasRole(WHITELIST_ROLE, _beneficiary), "WhitelistedPresale: User is not whitelisted");
        super._preValidatePurchase(_beneficiary, _weiAmount);

    }
    
}
